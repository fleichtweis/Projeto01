<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- MainActivity - Definição de Styles -->
        <!-- Margens Activity Main - Relative Layout -->
        <style name="margensRelativeMain">
            <item name="android:layout_marginRight">5dp</item>
            <item name="android:layout_marginLeft">5dp</item>
            <item name="android:layout_marginBottom">10dp</item>
            <item name="android:layout_marginTop">20dp</item>
        </style>

        <!-- Style dos botões iniciais - MainActivity -->
        <style name="botoes">
            <item name="android:layout_width">130dp</item>
            <item name="android:layout_height">130dp</item>
            <item name="android:textSize">14sp</item>
            <item name="android:textColor">@color/corBaixo</item>
            <item name="android:padding">20dp</item>
            <item name="android:gravity">bottom|center</item>
            <item name="android:background">@drawable/background_button</item>

            <!-- Margens entre botões -->
            <item name="android:layout_marginRight">20dp</item>
            <item name="android:layout_marginLeft">20dp</item>
            <item name="android:layout_marginBottom">15dp</item>
            <item name="android:layout_marginTop">15dp</item>
        </style>



    <!-- Activity Sobre Prefeito - Definição de Styles -->
        <!-- Style dos títulos da activity -->
        <style name="tituloActivitySobrePrefeito">
            <item name="android:textStyle">bold</item>
            <item name="android:textSize">20sp</item>
            <item name="android:textColor">@color/preto</item>
            <item name="android:gravity">center</item>
            <!-- Margens para o Título -->
            <item name="android:layout_marginBottom">15dp</item>
            <item name="android:layout_marginTop">25dp</item>
        </style>

        <!-- Style dos textos da activity -->
        <style name="textoActivitySobrePrefeito">
            <!-- Margens para o texto -->
            <item name="android:layout_marginRight">15dp</item>
            <item name="android:layout_marginLeft">15dp</item>
        </style>


</resources>
